{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "es7", "es6"],
    "baseUrl": ".",
    "strict": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
